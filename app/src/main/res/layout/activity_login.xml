<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login">

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/loginprocess"
        style="@style/SpinKitView.Small.Wave"
        android:layout_width="72dp"
        android:layout_height="62dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:visibility="invisible"
        app:SpinKit_Color="@color/Framecolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginBtn"
        app:layout_constraintVertical_bias="0.491">

    </com.github.ybq.android.spinkit.SpinKitView>

    <EditText
        android:id="@+id/userbox"
        android:layout_width="257dp"
        android:layout_height="61dp"
        android:layout_marginTop="250dp"
        android:ems="10"
        android:hint="POSTiT ID"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="@+id/passwordbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/passwordbox"
        android:layout_width="257dp"
        android:layout_height="61dp"
        android:layout_marginBottom="64dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/loginBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="192dp"
        android:layout_height="70dp"
        android:layout_marginBottom="188dp"
        android:text="Login"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="231dp"
        android:layout_height="137dp"
        app:layout_constraintBottom_toTopOf="@+id/userbox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.902"
        app:srcCompat="@drawable/postit" />
</androidx.constraintlayout.widget.ConstraintLayout>